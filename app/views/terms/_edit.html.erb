<%= form_for :term,
    url: url,
    method: method,
    html: {class: "term-form"} do |f| %>
  <% if @term and @term.errors.any? %>
    <div class="errors">
      <span>Bad news, bub.</span>
      <ul>
      <% @term.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :term %><br>
    <%= f.text_field :term %>
  </p>

  <p>
    <%= f.label :definition %><br>
    <%= f.text_area :definition %>
    <div>Note: You can cross reference another term by prefixing with a # sign.
    If the other term is multi-word, you can use #{other term}.
    </div>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

